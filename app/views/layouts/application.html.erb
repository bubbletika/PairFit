<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Pritika Natraj">

    <title>Pairfit|Home</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <link href="css/custom.css" rel="stylesheet">

    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Galindo|Montserrat+Alternates:400,700|Capriola|Varela+Round|Signika:400,600,700' rel='stylesheet' type='text/css'>

    <link rel='stylesheet' href='fullcalendar/fullcalendar.css' />
    <script src='lib/jquery.min.js'></script>
    <script src='lib/moment.min.js'></script>
    <script src='fullcalendar/fullcalendar.js'></script>
</head>
<body>
  <div id="sidebar">
    <% if logged_in? %>
      <span id="logged-in-as">Logged in as <%= current_user.name %></span>
      <ul>
        <li>
          <%= link_to workouts_user_path(current_user) do %>
            <span class="link">Workouts</span>
          <% end %>
        </li>

        <li>
          <%= link_to current_user do %>
            <span class="link">Profile</span>
          <% end %>
        </li>

        <li>
          <%= link_to buddies_user_path(current_user)  do %>
            <span class="link">Buddies</span>
          <% end %>
        </li>

        <li>
          <%= link_to static_pages_find_buddy_path  do %>
            <span class="link">Find a Buddy</span>
          <% end %>
        </li>

        <li>
          <%= link_to schedule_user_path(current_user)  do %>
            <span class="link">Schedule</span>
          <% end %>
        </li>

        <li>
          <%= link_to 'javascript:;' do %>
            <span class="link">Messages</span>
          <% end %>
        </li>

        <li>
          <%= link_to logout_path, method: "delete" do %>
            <span class="link">Sign out</span>
          <% end %>
        </li>

      </ul>
    <% else %>
      <ul>
        <li>
          <%= link_to root_url  do %>
            <span class="link">Log In</span>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_path  do %>
            <span class="link">Sign Up!</span>
          <% end %>
        </li>
      </ul>
    <% end %>


  </div>
  <div id="navbar">

    <a href="javascript:;" id="menu">
      <%= image_tag 'menu.png' %>
    </a>
    <span class="pairfit">
      PAIRFIT
    </span>
  </div>
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
  <div class="big-box">
    <%= yield %>
  </div>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="js/classie.js"></script>
    <script src="js/cbpAnimatedHeader.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="js/custom.js"></script>

    <script>
    $(document).ready(function() {

      // page is now ready, initialize the calendar...

        $('#calendar').fullCalendar({
        // put your options and callbacks here
        })
    });
  </script>
</body>
</html>
